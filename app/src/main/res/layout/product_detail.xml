<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EEEEEE">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="@drawable/title_bar_bg">

        <ImageView
                android:id="@+id/iv_back_product_detail"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textSize="26sp"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="#EEEEEE"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/detail_bg">
            <LinearLayout
                    android:id="@+id/ll_create_time_product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">
                <TextView
                        android:id="@+id/tv_time_tip_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="20sp"
                        android:textColor="#3e454c"
                        android:text="时间"/>
                <TextView
                        android:id="@+id/tv_create_time_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:textColor="#2185c5"
                        android:textSize="16sp"
                        android:text="2012-12-12 12:12:00"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#a0a0a0"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_product_name_tip_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#3e454c"
                        android:textSize="20sp"
                        android:text="商品"/>
                <TextView
                        android:id="@+id/tv_product_name_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:textColor="#2185c5"
                        android:text="红玫瑰"/>
                <Button
                        android:id="@+id/btn_update_product_name_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="更改"
                        android:textColor="#2185c5"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:background="@drawable/submit_button_default"
                        style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#a0a0a0"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_product_num_tip_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#3e454c"
                        android:textSize="20sp"
                        android:text="商品编码"/>
                <TextView
                        android:id="@+id/tv_product_num_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:textColor="#2185c5"
                        android:textSize="20sp"
                        android:text="HP010101"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#a0a0a0"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="20sp"
                        android:textColor="#3e454c"
                        android:text="类别"/>
                <TextView
                        android:id="@+id/tv_type_name_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:textSize="20sp"
                        android:textColor="#2185c5"
                        android:text="鲜花"/>
                <Button
                        android:id="@+id/btn_update_type_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="更改"
                        android:textColor="#2185c5"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:background="@drawable/submit_button_default"
                        style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#a0a0a0"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="20sp"
                        android:textColor="#3e454c"
                        android:text="库位"/>
                <TextView
                        android:id="@+id/tv_local_name_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:textSize="20sp"
                        android:textColor="#2185c5"
                        android:text="1号库位"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#a0a0a0"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#3e454c"
                        android:textSize="20sp"
                        android:text="数量"/>
                <TextView
                        android:id="@+id/tv_product_number_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:textSize="20sp"
                        android:textColor="#2185c5"
                        android:text="15"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#a0a0a0"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="20sp"
                        android:textColor="#3e454c"
                        android:text="操作人"/>
                <TextView
                        android:id="@+id/tv_create_user_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:textColor="#2185c5"
                        android:textSize="20sp"
                        android:text="XXX"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#a0a0a0"/>
            <LinearLayout
                    android:id="@+id/ll_last_update_time_product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="20sp"
                        android:textColor="#3e454c"
                        android:text="最后一次\n变更时间"/>
                <TextView
                        android:id="@+id/tv_last_update_time_product_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:textColor="#2185c5"
                        android:textSize="16sp"
                        android:text="2016-11-22 11:22:11"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
