<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EEEEEE">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="@drawable/title_bar_bg">

        <ImageView
                android:id="@+id/iv_back_check_storage"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盘仓"
                android:textSize="26sp"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="#EEEEEE"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前库位："
                    android:textSize="20sp"
                    android:textColor="#333333"/>
            <TextView
                    android:id="@+id/tv_current_location_check_storage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#2185c5"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#BBBBBB"
                    android:padding="5dp"
                    android:gravity="center_vertical">
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1.2"
                          android:text="名称"
                          android:gravity="center"
                          android:textSize="18sp"
                          android:textColor="#2185c5"/>
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.6"
                          android:text="库存"
                          android:textSize="18sp"
                          android:gravity="center"
                          android:textColor="#2185c5"/>
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1.6"
                          android:text="实际数量"
                          android:textSize="18sp"
                          android:gravity="center"
                          android:textColor="#2185c5"/>
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.6"
                          android:text="操作"
                          android:textSize="18sp"
                          android:gravity="center"
                          android:textColor="#2185c5"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/tv_tip_check_storage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#FF0000"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:padding="50dp"
                    android:text="按扫码按钮或者物理扫描键进行盘仓"/>
            <ListView
                    android:id="@+id/lv_check_storage_list_check_storage"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.4"
                android:gravity="center"
                android:orientation="vertical">
            <Button
                    android:id="@+id/btn_scan_code_check_storage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="扫码"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:background="@drawable/edit_button_default"
                    style="?android:attr/borderlessButtonStyle"/>
            <Button
                    android:id="@+id/btn_check_again_check_storage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="重新盘仓"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:background="@drawable/check_again_button_default"
                    style="?android:attr/borderlessButtonStyle"/>
            <Button
                    android:id="@+id/btn_finish_check_storage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:background="@drawable/continue_add_button_default"
                    style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
