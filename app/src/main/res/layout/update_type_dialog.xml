<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="20dp"
              android:gravity="center_vertical"
              android:background="@drawable/set_shop_name_dialog_bg">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2185C5"
                android:textSize="22sp"
                android:layout_centerInParent="true"
                android:text="请选择类别"/>
        <ImageView
                android:id="@+id/iv_close_dialog_update_type_dialog"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/close_dialog"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ListView
            android:id="@+id/lv_type_list_update_type_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="-1dp"
            android:scrollbars="none"
            android:divider="#2185C5"
            android:dividerHeight="0.5dp"
            android:background="@drawable/update_type_list_bg_default"/>
</LinearLayout>