<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eeeeee"
        android:padding="5dp"
        android:gravity="center_vertical">
    <TextView
            android:id="@+id/tv_time_in_out_record_list_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:text="最近一次变动"
            android:textSize="16sp"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="#666666"/>
    <TextView
            android:id="@+id/tv_product_name_in_out_record_list_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="名称"
            android:gravity="center"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="#666666"/>
    <TextView
            android:id="@+id/tv_location_name_in_out_record_list_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="库位"
            android:textSize="16sp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#666666"/>
    <TextView
            android:id="@+id/tv_product_number_in_out_record_list_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="数量"
            android:textSize="16sp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#666666"/>

</LinearLayout>