<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:gravity="center_vertical">
    <TextView
            android:id="@+id/tv_product_name_in_storage_list_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="名称"
            android:gravity="center"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="#333333"/>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center">
        <ImageView
                android:id="@+id/iv_minus_in_storage_list_item"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/minus"/>
        <EditText
                android:id="@+id/et_product_number_in_storage_list_item"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:inputType="number"
                android:maxLength="4"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#333333"/>
        <ImageView
                android:id="@+id/iv_add_in_storage_list_item"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/add"/>
    </LinearLayout>
    <TextView
            android:id="@+id/tv_delete_in_storage_list_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete"
            android:singleLine="true"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#FF0000"/>
</LinearLayout>