<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="20dp"
              android:gravity="center_vertical"
              android:background="@drawable/set_shop_name_dialog_bg">
    <ImageView
            android:id="@+id/iv_close_dialog_login_manual_dialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close_dialog"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="将以"
                android:textColor="#000000"
                android:textSize="18sp"/>
        <TextView
                android:id="@+id/tv_confirm_info_login_by_code_dialog"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="DL010101"
                android:textColor="#2185C5"
                android:textSize="22sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="作为用户登录"
                android:textColor="#000000"
                android:textSize="18sp"/>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="请确认"
            android:textColorHint="#2185C5"
            android:textColor="#000000"
            android:textSize="24sp"/>
    <Button
            android:id="@+id/btn_confirm_login_by_code_dialog"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="确认"
            android:layout_marginTop="20dp"
            android:textColor="#2185C5"
            android:padding="10dp"
            android:textSize="20sp"
            android:background="@drawable/submit_button_default"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>