<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:background="@drawable/set_shop_name_dialog_bg">
    <ImageView
            android:id="@+id/iv_close_dialog_check_storage_result_dialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close_dialog"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#BBBBBB"
            android:padding="5dp"
            android:gravity="center_vertical">
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="名称"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:textColor="#2185c5"/>
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="库位"
                  android:textSize="16sp"
                  android:gravity="center"
                  android:textColor="#2185c5"/>
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="库存"
                  android:textSize="16sp"
                  android:gravity="center"
                  android:textColor="#2185c5"/>
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.2"
                  android:text="实际数量"
                  android:textSize="16sp"
                  android:gravity="center"
                  android:textColor="#2185c5"/>
    </LinearLayout>
    <ListView
            android:id="@+id/lv_check_result_check_storage_result_dialog"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#999999"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
        <Button
                android:id="@+id/btn_confirm_check_storage_result_dialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确认"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:layout_marginRight="30dp"
                android:textSize="18sp"
                android:background="@drawable/edit_button_default"
                android:layout_gravity="center_horizontal"/>
        <Button
                android:id="@+id/btn_cancel_check_storage_result_dialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="#2185C5"
                android:padding="5dp"
                android:textSize="18sp"
                android:background="@drawable/submit_button_default"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>