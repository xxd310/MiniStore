<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:gravity="center_vertical"
              android:background="@drawable/set_shop_name_dialog_bg">
    <ImageView
            android:id="@+id/iv_close_dialog_connect_wifi_dialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close_dialog"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginBottom="10dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="为了保证您的程序稳定运行，微信数据及时更新，请尽快连接Wifi！"
                android:textColor="#333333"
                android:textSize="20sp"/>
    </LinearLayout>
    <Button
            android:id="@+id/btn_set_wifi_connect_wifi_dialog"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="设置WIFI"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_button_default"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>