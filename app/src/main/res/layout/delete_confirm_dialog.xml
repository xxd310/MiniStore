<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="20dp"
              android:gravity="center_vertical"
              android:background="@drawable/set_shop_name_dialog_bg">
    <ImageView
            android:id="@+id/iv_close_dialog_delete_confirm_dialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close_dialog"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="确认删除？"
                android:textColor="#FF0000"
                android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
        <Button
                android:id="@+id/btn_confirm_delete_confirm_dialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确认"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:background="@drawable/edit_button_default"
                android:layout_gravity="center_horizontal"/>
        <Button
                android:id="@+id/btn_cancel_delete_confirm_dialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="#2185C5"
                android:padding="10dp"
                android:textSize="20sp"
                android:background="@drawable/submit_button_default"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>