<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="20dp"
              android:gravity="center_vertical"
              android:background="@drawable/set_shop_name_dialog_bg">
    <ImageView
            android:id="@+id/iv_close_dialog_authorization_expire_dialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close_dialog"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
                android:id="@+id/tv_left_time_authorization_expire_dialog"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="您的授权将在7天后到期"
                android:textColor="#333333"
                android:textSize="18sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="请尽快进行授权，谢谢!"
                android:textSize="18sp"
                android:textColor="#333333"/>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="注意：到期后系统功能将不可用!"
            android:textColor="#FF0000"
            android:textSize="18sp"/>

</LinearLayout>