<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="20dp"
              android:gravity="center_vertical"
              android:background="@drawable/set_shop_name_dialog_bg">
    <ImageView
            android:id="@+id/iv_close_dialog_edit_product_name_dialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:src="@drawable/close_dialog"
            android:layout_marginBottom="10dp"/>
    <EditText
            android:id="@+id/et_product_name_edit_product_name_dialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入名称"
            android:singleLine="true"
            android:textColorHint="#999999"
            android:textColor="#2185C5"
            android:textSize="24sp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
    <Button
            android:id="@+id/btn_submit_edit_product_name_dialog"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="提交"
            android:layout_marginTop="20dp"
            android:textColor="#2185C5"
            android:padding="8dp"
            android:textSize="20sp"
            android:background="@drawable/submit_button_default"
            android:layout_gravity="center_horizontal"/>
</LinearLayout>